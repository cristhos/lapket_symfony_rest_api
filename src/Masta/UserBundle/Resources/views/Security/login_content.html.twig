{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">{{ 'security.login.username'|trans }} </label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>

    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" class="form-control"/>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    <p class="text-center"><a href="{{path('fos_user_resetting_request')}}">Mot de passe oubli√©</a></p>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-success pull-right"/>
    <a class="btn btn-link " href="{{path('fos_user_registration_register')}}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
</form>
