{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset form-horizontal' } }) }}
	<div>
    {{ form_label(form.plainPassword.first) }}
			{{ form_errors(form.plainPassword.first) }}
			{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}})  }}

    		{{ form_label(form.plainPassword.second) }}
			{{ form_errors(form.plainPassword.second) }}
			{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}})  }}
	</div>
    <div>
        <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn btn-success pull-right" />
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}
